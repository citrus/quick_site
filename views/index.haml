%h2 New Site

%form{ :action => "/create", :method => "POST" }

  %label{ :for => "name" } Name:
  %input{ :type => "text", :name => "name", :value => params[:name] }
  %input{ :type => "submit", :value => "Create" }


- if @sites
  %h2 Sites
  %h4 Site Root: #{Settings.site_root}
  
  %ul.sites
  - @sites.each do |site|
    %li
      %h4= link_to site, "/sites/#{site}"
      = link_to 'deploy!', "/sites/#{site}/_deploy"